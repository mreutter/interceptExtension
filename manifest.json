{
    "manifest_version": 3,
    "name": "InterceptorInjector",
    "version": "1.0",
    "permissions": [
        "scripting",
        "webNavigation"
    ],
    "host_permissions": [
        "<all_urls>",
        "http://localhost/*",
        "http://127.0.0.1/*",
        "ws://localhost/*",
        "ws://127.0.0.1/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["bridge.js"],
            "run_at": "document_start"
        }
    ],
    "action": {
        "default_title": "Inject"
    }
}